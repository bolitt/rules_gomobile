build                   --verbose_failures
build                   --ios_minimum_os=9.0
build                   --experimental_objc_enable_module_maps
build                   --android_crosstool_top=@androidndk//:toolchain-libcpp
build                   --strip=never

build:android_386       --crosstool_top=@androidndk//:toolchain-libcpp
build:android_386       --host_crosstool_top=@bazel_tools//tools/cpp:toolchain
build:android_386       --platforms=@co_znly_rules_gomobile//platform:android_386
build:android_386       --cpu=x86

build:android_amd64     --crosstool_top=@androidndk//:toolchain-libcpp
build:android_amd64     --host_crosstool_top=@bazel_tools//tools/cpp:toolchain
build:android_amd64     --platforms=@co_znly_rules_gomobile//platform:android_amd64
build:android_amd64     --cpu=x86_64

build:android_arm       --crosstool_top=@androidndk//:toolchain-libcpp
build:android_arm       --host_crosstool_top=@bazel_tools//tools/cpp:toolchain
build:android_arm       --platforms=@co_znly_rules_gomobile//platform:android_arm
build:android_arm       --cpu=armeabi-v7a

build:android_arm64     --cpu=arm64-v8a
build:android_arm64     --crosstool_top=@androidndk//:toolchain-libcpp
build:android_arm64     --fat_apk_cpu=arm64-v8a
build:android_arm64     --host_crosstool_top=@bazel_tools//tools/cpp:toolchain
build:android_arm64     --platforms=@co_znly_rules_gomobile//platform:android_arm64

build:ios_arm           --platforms=@co_znly_rules_gomobile//platform:ios_arm
build:ios_arm           --cpu=ios_armv7

build:ios_arm64         --platforms=@co_znly_rules_gomobile//platform:ios_arm64
build:ios_arm64         --cpu=ios_arm64

build:ios_386           --platforms=@co_znly_rules_gomobile//platform:ios_386
build:ios_386           --cpu=ios_i386

build:ios_amd64         --platforms=@co_znly_rules_gomobile//platform:ios_amd64
build:ios_amd64         --cpu=ios_x86_64

build:multiarch         --define=gomobile_multiarch=true
build:multiarch         --fat_apk_cpu=arm64-v8a,armeabi-v7a
build:multiarch         --ios_multi_cpus=arm64,armv7
